
<%layout("zeroboilerplate")%>

<% if(success &&success.length){ %>
 
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%=success%>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>
        <% if(error &&error.length){ %>
            
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <%=error%>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
              </div>
            <% } %>

<div class="container" style="margin-top:100px;">
    <!-- <div class="col-md-4"></div> -->
    <div class="d-flex justify-content-center align-items-center">
        <div class="card personal" id="logincard">
            <img src="images/useravtar.png" class="card-img-top"
                style="border-radius:50%;width:50%;margin-left:95px">
            <div class="card-body">
                <h5 class="card-title text-center" style="font-weight: 900;">LOGIN</h5>
                <form action="/login" method="post" class="validated-form" novalidate>
                    <div class="mb-3">
                        <label for="username" class="my-2 darki">Username : </label>
                        <input type="text" name="username" id="username" class="form-control"
                            required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="passwd" class="my-2 darki">Password : </label>
                        <input type="password" name="password" id="passwd" class="form-control"
                            required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <button class="btn btn-success mx-auto">Login</button>
                </form>
                <form>
                    <label for="reg" style="color:var(--darktext);font-weight: 900;"
                        class="mt-3">Don't have
                        an
                        account?</label>
                    <a href="/register" style="color:rgb(38, 179, 255);text-decoration: underline;">Register</a>
                </form>
            </div>
        </div>
    </div>

</div>